<?xml version="1.0" standalone="yes" ?>
<Jaus>
    <!-- The broadcast attribute indicates that the Node should broadcast
         hearbeat messages to 255.255.1.1 when the value is true.  Otherwise
         it only broadcasts to SubsystemID.255.1.1 which is used for Node
         discovery.  See Dynamic Discovery in the JAUS RA for more info about
         discovery procedures.-->
    <NodeManagerComponent broadcast="true">
        <!-- NetHeader indicates what string data is present at the front of
             all network traffic.-->
        <NetHeader>JAUS01.0</NetHeader>
        <NetPort>3794</NetPort>
        <!-- Transport indicates that the default
             transport medium for inter-node communication
             should be.  Supported values are UDP or TCP-->
        <Transport>UDP</Transport>
        <!-- Set the multicast address to use for multicast transmissions. If
             field is not present, a value of 224.1.0.1 is used by default. TTL is the
             Time To Live for Multicast Transmission-->
        <MulticastAddress ttl="1">224.1.0.1</MulticastAddress>
        <!-- The NodeManagerNetAddress field indicates what network
             interface or IP address to use for receiving.  If you leave
             this field blank, any available interfaces is used.  If you have
             more than one interface, set the interface number (e.g. 0, 1, 2) or the
             IP address to use (e.g. 192.168.1.2) -->
        <NodeManagerNetAddress></NodeManagerNetAddress>
        <!-- The CommunicatorManagerNetAddress field indicates what network
             interface or IP address to use for receiving on the Communicators
             default data link connection.  If you leave
             this field blank, any available interfaces is used.  If you have
             more than one interface, set the interface number (e.g. 0, 1, 2) or the
             IP address to use (e.g. 192.168.1.2) -->
        <CommunicatorNetAddress></CommunicatorNetAddress>
        <NodeConnections>
            <!-- Example default node connections. -->
            <!-- <Connection subsystem="1" node="2" host="128.185.3.1" />-->
            <!-- <Connection subsystem="1" node="3" port="com2" baud="9600" bits="8" parity="0" stop="1"/>-->
        </NodeConnections>
        <!-- This value represents how large a block of shared memory you
             want to use for storing messages coming in to the Node Manager
             for routing.  The value is in bytes. Default size is
             4 MB -->
        <MessageBoxSize>4194304</MessageBoxSize>
        <SubsystemID>2</SubsystemID>
        <NodeID>1</NodeID>
        <!-- Option Subsystem Identification data if available.  Authority
             is the lowest level of authority to gain control of parts of
             subsystem, identification is the name of the subsystem and
             type is the type of subsystem, however the values are 
             not defined as of this writing (JAUS RA 3.3)-->
        <SubsystemIdentification authority="0"
                                 identification="Optimus Prime"
                                 type="10001"/>
        
        <!-- SubsystemConfiguration lists what the configuration
             of the subsystem is.  Use this if you know what your
             subsystems configuration is supposed to be instead of
             waiting for Dynamic Discovery finding nodes on your
             subsystem. -->
        <SubsystemConfiguration>
            <!--
            <Node id="1">
                <Component id="35" instance="1"></Component> 
                <Component id="38" instance="1"></Component>
                <Component id="33" instance="1"></Component> 
                <Component id="42" instance="1"></Component>
            </Node> 
            -->
        </SubsystemConfiguration>
        <!-- Enable or disable logging at startup by setting the
             logdata attribute to true, use false to not have logging at startup. -->
        <NodeLogger logdata="false" />        
    </NodeManagerComponent>
</Jaus>
