<?xml version="1.0" standalone="yes" ?>
<Jaus>
  <VisualSensorComponent>
    <!-- Set instance ID to 0 if you don't care what it is. -->
    <InstanceID>0</InstanceID>
    <!-- If maxWidth and maxHeight are not 0, then 
             image data will be scaled. If show is false, then the image is not updated to the screen. -->
    <Settings width="640" height="480" interlaced="false" show="true"></Settings>
    <ScaledResolution maxWidth="512" maxHeight="512"></ScaledResolution>
    <!-- MessageBoxSize is how much of a buffer to use for
             video streaming-->
    <MessageBoxSize>2097152</MessageBoxSize>
    <!-- Source is the name of the camera or video file you wish to 
             be the source for the visual sensor or use the camera number.-->
    <Source>0</Source>
  </VisualSensorComponent>
</Jaus>
